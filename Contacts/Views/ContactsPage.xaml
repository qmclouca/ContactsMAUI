<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.ContactsPage"
             Title="Contacts">
    <ListView 
        x:Name="listContacts" 
        BackgroundColor="Transparent"
        SeparatorColor="LightBlue"
        SeparatorVisibility="None"
        RowHeight="60"
        ItemSelected="listContacts_ItemSelected"
        ItemTapped="listContacts_ItemTapped">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell 
                    Text="{Binding Path=Name}"
                    Detail="{Binding Path=Email}"></TextCell>
                <!--<Label Text="{Binding Phone}" FontSize="16" />
                        <Label Text="{Binding Email}" FontSize="16" />-->
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView> 
</ContentPage>